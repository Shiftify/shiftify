<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_person_exceptions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cz.cvut.fit.shiftify.exceptions.ExceptionListActivity"
    tools:showIn="@layout/activity_person_exception_list">


    <include
        android:id="@+id/person_exceptions_header"
        layout="@layout/person_exceptions_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/exception_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/person_exceptions_header" />

</RelativeLayout>
