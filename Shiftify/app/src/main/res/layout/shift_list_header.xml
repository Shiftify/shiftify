<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shift_list_header"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_marginRight="10sp"
    android:layout_marginLeft="10sp"
    android:orientation="horizontal">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/relative">

        <ImageButton
            android:id="@+id/date_arrow_left"
            android:layout_height="wrap_content"
            android:layout_width="40sp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/shift_list_header_date"
            android:layout_toLeftOf="@+id/shift_list_header_date"
            android:onClick="showPreviousDay"/>
        <!--previous line meant for older APIs-->

        <ImageButton
            android:id="@+id/date_arrow_right"
            android:layout_height="wrap_content"
            android:layout_width="40sp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/shift_list_header_date"
            android:layout_toRightOf="@id/shift_list_header_date"
            android:onClick="showNextDay"/>
        <!--previous line meant for older APIs-->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_alignBottom="@id/shift_list_header_date"
            />

        <ImageButton
            android:id="@+id/btn_date"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:src="@drawable/ic_event_black_24dp"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:onClick="showDatePicker"/>

        <TextView
            android:id="@id/shift_list_header_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="30sp"
            android:text="12.2.2016"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>